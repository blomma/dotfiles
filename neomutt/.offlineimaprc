# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = blomma,brf
pythonfile = ~/.offlineimap.py

[Account blomma]
localrepository = blomma-local
remoterepository = blomma-remote
postsynchook = ~/.offlineimap.postsynchook

[Repository blomma-local]
type = Maildir
localfolders = ~/.mail/blomma

[Repository blomma-remote]
type = IMAP
ssl = yes
cert_fingerprint = bddc89dae48629898af13421d7844f806ca33943
remotehost = mail.messagingengine.com
remoteuser = blomma@artsoftheinsane.com
remotepasseval = imappasswd("blomma")

[Account brf]
localrepository = brf-local
remoterepository = brf-remote
postsynchook = ~/.offlineimap.postsynchook

[Repository brf-local]
type = Maildir
localfolders = ~/.mail/brf

[Repository brf-remote]
type = IMAP
ssl = yes
cert_fingerprint = 86a1fdde63098a6caa65f6e9396da9dcc4af5f5d
remotehost = imap.one.com
remoteuser = hultgren.mikael@brfflygledaren.se
remotepasseval = imappasswd("brf")