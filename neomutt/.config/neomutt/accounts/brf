set from = "Mikael Hultgren <hultgren.mikael@brfflygledaren.se>"

set postponed	= =brf/INBOX.Drafts
set record		= =brf/INBOX.Sent
set spoolfile	= =brf/INBOX
set trash       = =brf/INBOX.Trash

# Sending ----------------------------------------------
set sendmail		= "/usr/local/bin/msmtp -a brf"
set sendmail_wait	= 0
set use_from		= yes

macro index,pager s "\
<enter-command>unset resolve<enter>\
<save-message>=brf/INBOX.LSpam<enter>\
<sync-mailbox><enter>\
<enter-command>set resolve<enter>" \
"Learn Spam"

macro index,pager a "\
<enter-command>unset resolve<enter>\
<save-message>=brf/INBOX.Archive<enter>\
<sync-mailbox><enter>\
<enter-command>set resolve<enter>" \
"Archive message"

alias brf \
Indira <babic.indira@brfflygledaren.se>, \
Pablo <utter.pablo@brfflygledaren.se>, \
Holm Mikael <holm.mikael@brfflygledaren.se>, \
Jonas <mattsson.jonas@brfflygledaren.se>, \
Agneta <kocko.agneta@brfflygledaren.se>
