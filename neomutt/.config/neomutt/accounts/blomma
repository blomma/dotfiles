# vi:syntax=neomuttrc
set from = "Mikael Hultgren <blomma@artsoftheinsane.com>"

set postponed	= =blomma/INBOX.Drafts
set record		= =blomma/INBOX.Sent
set spoolfile	= =blomma/INBOX
set trash       = =blomma/INBOX.Trash

# Sending ----------------------------------------------
set sendmail		= "msmtp -a blomma"
set sendmail_wait	= 0
set use_from		= yes

macro index,pager s "\
<enter-command>unset resolve<enter>\
<save-message>=blomma/INBOX.LSpam<enter>\
<sync-mailbox><enter>\
<enter-command>set resolve<enter>" \
"Learn Spam"

macro index,pager a "\
<enter-command>unset resolve<enter>\
<save-message>=blomma/INBOX.Archive<enter>\
<sync-mailbox><enter>\
<enter-command>set resolve<enter>" \
"Archive message"

macro attach W "<save-entry><bol>~/Download/<eol>" "Save to desktop"
